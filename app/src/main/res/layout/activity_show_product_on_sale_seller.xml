        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/rarityView"
