<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgT"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:minWidth="400dp"
            android:minHeight="400dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameT"
                style="@style/main_text_style_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/expansionT"
                android:text="Card name" />

            <TextView
                android:id="@+id/expansionT"
                style="@style/main_text_style_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/rarityT"
                android:text="Expansion" />

            <TextView
                android:id="@+id/rarityT"
                style="@style/main_text_style_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Rarity" />

            <TextView
                android:id="@+id/price_product_2"
                style="@style/main_text_style_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rarityT"
                android:text="@string/card_price" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>